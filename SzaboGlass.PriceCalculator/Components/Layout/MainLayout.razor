@inherits LayoutComponentBase

<MudThemeProvider></MudThemeProvider>
<MudDialogProvider CloseOnEscapeKey="true"></MudDialogProvider>
<MudSnackbarProvider></MudSnackbarProvider>
<MudPopoverProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@(() => DrawerToggle())"></MudIconButton>
    </MudAppBar>

    <MudDrawer Open="@isOpen">
        <NavMenu></NavMenu>
    </MudDrawer>
    
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>